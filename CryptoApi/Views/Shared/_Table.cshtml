@using Microsoft.AspNetCore.Html
@model ITableVM

<div class="dc-table dcg-tpg">
    <table>
        <tr>
            @{
                int counter = Model.keys.Count();
            }
            @foreach(IHtmlContent title in Model.keys)
            {
                if (--counter == 0)
                {
                    <th>@title</th>
                }
                else
                {
                    @if (Model.IsSortable)
                    {
                        @if(counter + 1 == Model.keys.Count())
                        {
                            <th>@title</th>
                        }
                        else
                        {
                            <th><a href="#">@title</a></th>
                        }
                    }
                    else
                    {
                        <th>@title</th>
                    }
                }
            }
        </tr>
        @*@if (Model.rows.Count() > 0)
        {*@
            @foreach (var row in Model.rows)
            {
                <tr>
                    @foreach(var value in row)
                    {
                        <td>@value</td>
                    }
                </tr>
            }
        @*}*@
        
    </table>
</div>
