@model CCoinDataVM

<div class="dc-coin-info dc-coin-info-custom">
    <h2 class="dc-coin-info-title">@Model.data.name_full info</h2>
    <table class="dc-coin-info-table">
        <tbody>
            <tr>
                <th> 
                    <div class="dc-coin-info-table-header">
                        Week
                    </div>
                </th>
                <th>
                    <div class="dc-coin-info-table-header">
                        Month
                    </div>
                </th>
                <th>
                    <div class="dc-coin-info-table-header">
                        Day
                    </div>
                </th>
                <th>
                    <div class="dc-coin-info-table-header">
                        Market Cap
                    </div>
                </th>
                <th>
                    <div class="dc-coin-info-table-header">
                        24h Change
                    </div>
                </th>
            </tr>
            <tr>
                <td>
                    <div class="dc-coin-info-table-value">
                        @Model.data.week_percent_change%
                    </div>
                </td>
                <td>
                    <div class="dc-coin-info-table-value">
                        @Model.data.month_percent_change%
                    </div>
                </td>
                <td>
                    <div class="dc-coin-info-table-value">
                        @Model.data.day_percent_change%
                    </div>
                </td>
                <td>
                    <div class="dc-coin-info-table-value">
                        @Model.data.market_cap
                    </div>
                </td>
                <td>
                    <div class="dc-coin-info-table-value">
                        @Model.data.day_change
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
</div>
