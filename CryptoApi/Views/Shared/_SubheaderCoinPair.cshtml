@model (CTextBlockVM pagehead, (string coin1_name, string coin2_name) coins)

<div class="dc-subheader-coin-pair">
    <div class="row">
        <div class="col">
            @await Html.PartialAsync("_Breadcrumbs", new[] { ("Cryptocurrency Exchange Pairs", Url.RouteUrl(new { Action = "Index", Controller = "CoinPairs" })), (Model.coins.coin1_name + " to " + Model.coins.coin2_name, "") })
        </div>
    </div>
    <div class="row">
        <div class="col">
            <h1 class="dcg-h1">@Html.Raw(Model.pagehead.title)</h1>
            @await Html.PartialAsync("_CoinWidget", (Model.coins.coin1_name, "usd"))
        </div>
        <div class="col">
            @await Html.PartialAsync("_ExchangeWidget", (Model.coins.coin1_name.ToLower(), Model.coins.coin2_name.ToLower()))
        </div>
    </div>
</div>