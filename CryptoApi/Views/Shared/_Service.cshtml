@model (string img_path, string title, string content, (string name, string url) link)

<div class="dc-service dcg-shadow-hover dcg-shadow-md">
    <div class="dc-service__head">
        <img src="@Model.img_path" alt="image">
        <h3 class="dcg-h3">@Model.title</h3>
    </div>
    <div class="dc-service__content">
        <p>
            @Model.content
        </p>
    </div>
    <div class="dc-service__details">
        <a href="@Model.link.url">
            @Model.link.name
            <svg icon="arrow-right-dark" class="dcg-icon-arrow-right"></svg>
        </a>
    </div>
</div>
